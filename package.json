{
  "name": "codelinesjs-api",
  "version": "1.0.0",
  "description": "API dla platformy CodeLinesJS do nauki JavaScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && npm run copy-static",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "init-data": "node --no-warnings --loader ts-node/esm --experimental-specifier-resolution=node src/scripts/initLearningData.ts",
    "update-stats": "node --no-warnings --loader ts-node/esm --experimental-specifier-resolution=node src/scripts/updateUserStats.ts",
    "init-paths": "node --no-warnings --loader ts-node/esm --experimental-specifier-resolution=node src/scripts/initLearningPaths.ts",
    "vercel-build": "npm run build && npm run verify-public",
    "copy-static": "mkdir -p dist/public && cp -r public/* dist/public/ || true",
    "prebuild": "mkdir -p dist && mkdir -p dist/public",
    "postbuild": "npm run copy-static",
    "verify-public": "ls -la dist/public || true"
  },
  "engines": {
    "node": ">=18.x"
  },
  "keywords": [
    "javascript",
    "learning",
    "api",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "@sendgrid/mail": "^8.1.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.16",
    "sanitize-html": "^2.15.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.14",
    "@types/nodemailer": "^6.4.17",
    "@types/sanitize-html": "^2.13.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
